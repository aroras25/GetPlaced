        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            >

            <ImageView
                android:id="@+id/pic2"
                android:layout_width="100dp"
                android:layout_alignParentLeft="true"
