<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#757575"
    android:fillViewport="true"
    tools:context="com.aroraemc.sahil.getplaced.EricsonAluminiReviews">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="Alumini Reviews"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:id="@+id/pic"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/firstface"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/name"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="Jacob : "
                android:layout_toRightOf="@id/pic"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_toRightOf="@+id/pic"
                android:layout_below="@+id/name"
                android:text="Great one. Join it ASAP" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/pic2"
                android:layout_width="100dp"
                android:layout_alignParentLeft="true"
                android:layout_height="80dp"
                android:src="@drawable/second"
                android:scaleType="centerCrop"
                />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/name2"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_toRightOf="@+id/pic2"
                android:text="Mr. Been : "
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_toRightOf="@+id/pic2"
                android:layout_below="@+id/name2"
                android:text="Best Place to Work" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:id="@+id/pic"
                android:layout_height="80dp"
                android:src="@drawable/third"
                android:scaleType="centerCrop"

                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/name"
                android:textColor="@android:color/white"
